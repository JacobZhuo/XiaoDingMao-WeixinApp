/* pages/add/add.wxss */
.navbar-title {
  -webkit-box-flex: 1;
  flex: 1;
  font-size: 15px;
  color: #fff;
  display: inline-block;
  width: aotu;
  text-align:center;
  padding: 13px 9px;
}
.order-info{
    margin-top: 50px;
}
.item-add{
    background: darkorange;
    margin: 12px 20px;
    color: white;
    font-size: 16px;
}
.info-preview{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 13px;
    padding-bottom: 5px;
}
.info-preview-item{
    -webkit-box-flex: 1;
    -webkit-flex:1;
    flex: 1;
    text-align: center;   
    border-left: 1rpx solid #D9D9D9;    
}
.info-preview-item:first-child{
    border: none;
}
.item-data{
    display: block;
    color: dodgerblue;
}
.weui-form-preview{
    margin-bottom: 25px;
}
.item-flex_p{
    display: -webkit-flex;
    display: -webkit-box;
    display: flex;
}
.item-flex_img{
    -webkit-box-flex: 2;
    flex: 2;
    padding:5px 0;
}
.item-flex_info{
    -webkit-box-flex: 3;
    flex: 3
}
.weui-form-preview__btn_delete{
    color:#E64340;
}
.weui-form-preview__btn_modify{
    color:darkorange;
}
.weui-navbar-bottom{
  position: fixed;
  z-index: 500;
  bottom: 0;
  width: 100%;
  height:50px; 
  background-color:#ffffff;
  border-top: 1rpx solid #CCCCCC;
  border-bottom: 1rpx solid #CCCCCC;
}
.bottom-pd{
    padding-bottom: 50px;
}
.order-push-btn{
    background: #1AAD19;
    margin: 5px 20px;
    color: white;
    font-size: 16px;
}
