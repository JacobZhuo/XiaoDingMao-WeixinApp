/* pages/orders/orders.wxss */

.navbar-title {
  -webkit-box-flex: 1;
  flex: 1;
  font-size: 15px;
  color: #fff;
  display: inline-block;
  width: aotu;
  text-align: left;
  padding: 13px 9px;
}

.order-list {
  margin-top: 60px;
  display: block;
}

.order-item {
  position: relative;
  background-color: #fff;
  font-size: 15px;
  margin-bottom: 15px;
}

.order-item:before {
  content: '';
  position: absolute;
  left: 0;
  height: 1px;
  right: 0;
  top: 0;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.order-item:after {
  content: '';
  position: absolute;
  left: 0;
  height: 1px;
  right: 0;
  bottom: 0;
  border-bottom: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.order-title {
  padding: 6px 9px;
  position: relative;
  -webkit-box-align: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 14px;
  color: lightslategrey;
}

.order-title__id {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.order-title__time {
  text-align: right;
}

.order-info {
  position: relative;
}

.order-info:before {
  content: '';
  position: absolute;
  left: 9px;
  height: 1px;
  right: 0;
  top: 0;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.info-title {
  padding: 4px 9px;
  position: relative;
  text-align: left;
}

.info-subtitle {
  padding: 4px 9px;
  position: relative;
  -webkit-box-align: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 14px;
  color: lightslategrey;
}

.info-text__ft {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.info-text__rt {
  text-align: right;
}

.order-button {
  padding: 6px 9px;
  position: relative;
  -webkit-box-align: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  vertical-align: middle;
}

.order-button:before {
  content: '';
  position: absolute;
  left: 9px;
  height: 1px;
  right: 0;
  top: 0;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.left-btn {
  flex: 3;
  -webkit-box-flex: 3;
  -webkit-flex: 3;
}

.right-btn {
  text-align: right;
  flex: 2;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
}

.btn-center {
  vertical-align: middle;
}
