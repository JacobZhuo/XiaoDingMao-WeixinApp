<view class="login">
<view class="login-box">
  <view class="login-cell weui-cell_input">
    <view class="weui-cell__bd">   
      <input class="weui-input" type="digit" placeholder="手机号" bindinput="phone"/>
    </view>
  </view>
  <view class="login-cell weui-cell_input">
    <view class="weui-cell__bd">
      <input class="weui-input" type="digit" placeholder="验证码" bindinput="code"/>
    </view>
     <view class="weui-cell__ft">
                    <view class="weui-vcode-btn" bindtap="getcode">获取验证码</view>
                </view>
  </view>  
</view>

  <view class="login-btn-box">
  <button class="weui-btn login-btn" type="primary" bindtap="login">登 录</button>
  </view>

  </view>